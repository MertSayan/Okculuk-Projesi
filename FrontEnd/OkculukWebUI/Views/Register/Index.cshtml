@model CreateRegister

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Sayfası</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .register-container {
            margin-top: 10vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .btn-custom {
            background-color: #6c63ff;
            color: white;
            transition: all 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #5149e5;
            }

        .form-control:focus {
            border-color: #6c63ff;
            box-shadow: 0 0 0 0.2rem rgba(108, 99, 255, 0.25);
        }

        .footer {
            text-align: center;
            margin-top: 20px;
            color: #6c757d;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="container register-container">
        <div class="col-md-6 col-lg-4">
            <div class="card p-4">
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-primary">Kayıt Ol</h2>
                    <p class="text-muted">Hesap oluşturmak için bilgilerinizi girin</p>
                </div>
                <form  method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Ad</label>
                        <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Adınızı girin" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Surname" class="form-label">Soyad</label>
                        <input asp-for="Surname" type="text" class="form-control" id="surname" placeholder="Soyadınızı girin" required>
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                        <input asp-for="PhoneNumber" type="text" class="form-control" id="phone" placeholder="Telefon numaranızı girin" required>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" type="email" class="form-control" id="email" placeholder="E-posta adresinizi girin" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Şifre</label>
                        <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Şifrenizi girin" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="RegionId" class="form-label">Bölge</label>
                        <select class="form-control" asp-for="RegionId">
                            @await Component.InvokeAsync("_ResultAllRegionComponentPartial")
                        </select>
                       
                    </div>
                    <button type="submit" class="btn btn-custom w-100">Kayıt Ol</button>
                </form>
                <div class="footer">
                    <p>Zaten hesabınız var mı? <a href="/Login/Index" class="text-primary text-decoration-none">Giriş Yap</a></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (Optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

