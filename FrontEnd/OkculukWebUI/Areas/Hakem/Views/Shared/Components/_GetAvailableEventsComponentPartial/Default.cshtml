@model List<ResultAvailableEventsForUser>

<div class="card" style="width: 25rem;">
    <h2 class="card-title lead p-4 border-bottom" style="font-weight: 600">
        Cevap Verebileceğiniz Etkinlikler
    </h2>
    <div class="overflow-auto" style="max-height: 500px;">
        <!-- Scroll için -->
        @foreach (var item in Model)
        {
            <div class="d-flex border-bottom p-3 align-items-start">
                <!-- Sol taraf ikon -->
                <div class="text-danger me-3">
                    <i class="far fa-3x fa-calendar-alt"></i>
                </div>
                <!-- Sağ taraf içerik -->
                <div>
                    <h5 class="mb-1">
                        <a href="@Url.Action("EventDetails", "Event", new { id = item.EventId })"
                           class="text-decoration-none text-dark">
                            @item.Title
                        </a>
                    </h5>
                    <p class="card-text mb-1 small">@item.UserName tarafından oluşturuldu</p>
                    <p class="card-text mb-0 small text-muted">
                        Tarih ve Saat: @item.DateAndTime
                    </p>
                    <p class="card-text mb-0 small text-muted">
                        @item.Description.Substring(0, Math.Min(30, item.Description.Length))...
                    </p>
                </div>
            </div>
        }
    </div>
</div>



