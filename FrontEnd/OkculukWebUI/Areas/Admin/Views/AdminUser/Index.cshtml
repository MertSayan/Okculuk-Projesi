@model List<ResultPagedUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Tüm Kullanıcılar</h4>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table id="basic-datatables"
                           class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>UserId</th>
                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>Mail</th>
                                <th>Telefon</th>
                                <th>Rol</th>
                                <th>Bölge</th>
                                <th>Kurumu</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>UserId</th>
                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>Mail</th>
                                <th>Telefon</th>
                                <th>Rol</th>
                                <th>Bölge</th>
                                <th>Kurumu</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.UserId</td>
                                    <td>@item.Name</td>
                                    <td>@item.Surname</td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.RoleName</td>
                                    <td>@item.RegionName</td>
                                    @if (@item.InstitutionName == null)
                                    {
                                        <td>Girilmemiş</td>
                                    }
                                    else
                                    {
                                        <td>@item.InstitutionName</td>
                                    }
                                    <td>
                                        <button class="btn btn-danger delete-button" data-url="/Admin/AdminUser/Remove/@item.UserId">
                                            Sil
                                        </button>
                                    </td>
                                    <td>
                                        <button class="btn btn-warning update-button" data-url="/Admin/AdminUser/Update/@item.UserId">
                                            Güncelle
                                        </button>
                                    </td>
                                    <td>
                                        <button class="btn btn-success detail-button" data-url="/Admin/AdminUser/Detail/@item.UserId">
                                            Detayı Görüntüle
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <nav>
        <ul class="pagination">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="?pageNumber=@(ViewBag.CurrentPage - 1)&pageSize=@ViewBag.PageSize">Önceki</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="?pageNumber=@ViewBag.CurrentPage&pageSize=@ViewBag.PageSize">@ViewBag.CurrentPage</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="?pageNumber=@(ViewBag.CurrentPage + 1)&pageSize=@ViewBag.PageSize">Sonraki</a>
            </li>
        </ul>
    </nav>
</div>

