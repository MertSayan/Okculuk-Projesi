@model List<AdminResultAllUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Seçilen Kullanıcının İlgili Etkinlik Durumları</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="basic-datatables"
                           class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>UserId</th>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Rol</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>UserId</th>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Rol</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.UserId</td>
                                    <td>@item.Name</td>
                                    <td>@item.Surname</td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.RoleName</td>
                                    <td>
                                        <button class="btn btn-danger delete-button" data-url="/Admin/AdminUser/Remove/@item.UserId">
                                            Sil
                                        </button>
                                        <button class="btn btn-warning update-button" data-url="/Admin/AdminUser/Update/@item.UserId">
                                            Güncelle
                                        </button>
                                        <button class="btn btn-success detail-button" data-url="/Admin/AdminUser/Detail/@item.UserId">
                                            Detayı Görüntüle
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

