<script>
    // SweetAlert ile Silme İşlemi ve Yönlendirme
    $(document).on('click', '.delete-button', function (e) {
        e.preventDefault(); // Varsayılan tıklama davranışını engelle

        var url = $(this).data('url'); // Butondaki hedef URL'yi al

        swal({
            title: "Emin Misin?",
            text: "Bunu Geri Alamazsın!",
            type: "Uyarı",
            buttons: {
                confirm: {
                    text: "Evet, sil gitsin!",
                    className: "btn btn-success",
                },
                cancel: {
                    text: "Hayır, iptal et!",
                    visible: true,
                    className: "btn btn-danger",
                },
            },
        }).then((willDelete) => {
            if (willDelete) {
                // Kullanıcı onay verdi, yönlendirme yap
                window.location.href = url;
            } else {
                swal.close(); // SweetAlert'i kapat
            }
        });
    });

    $(document).on('click', '.update-button', function (e) {
        e.preventDefault(); // Varsayılan tıklama davranışını engelle

        var url = $(this).data('url'); // Butondaki hedef URL'yi al

        swal({
            title: "Emin Misin?",
            text: "Güncelleme Yapılacak",
            type: "Güncelleme İsteği",
            buttons: {
                confirm: {
                    text: "Evet, güncelleme sayfasına git!",
                    className: "btn btn-success",
                },
                cancel: {
                    text: "Hayır, iptal et!",
                    visible: true,
                    className: "btn btn-danger",
                },
            },
        }).then((willDelete) => {
            if (willDelete) {
                // Kullanıcı onay verdi, yönlendirme yap
                window.location.href = url;
            } else {
                swal.close(); // SweetAlert'i kapat
            }
        });
    });

    $(document).on('click', '.detail-button', function (e) {
        e.preventDefault(); // Varsayılan tıklama davranışını engelle

        var url = $(this).data('url'); // Butondaki hedef URL'yi al

        // Kullanıcıyı hedef URL'ye yönlendir
        if (url) {
            window.location.href = url;
        }
    });
    $(document).on('click', '.back-button', function (e) {
        e.preventDefault(); // Varsayılan tıklama davranışını engelle

        var url = $(this).data('url'); // Butondaki hedef URL'yi al

        // Kullanıcıyı hedef URL'ye yönlendir
        if (url) {
            window.location.href = url;
        }
    });


</script>

